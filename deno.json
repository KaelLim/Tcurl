{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@tcurl/shorturl-api",
  "version": "2.0.0",
  "description": "慈濟短網址系統 - Deno 版本",
  "exports": "./src/main.ts",

  "tasks": {
    "dev": "deno run --watch --env --allow-net --allow-read --allow-write --allow-env src/main.ts",
    "start": "deno run --env --allow-net --allow-read --allow-write --allow-env src/main.ts",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/main.ts",
    "compile": "deno compile --allow-net --allow-read --allow-write --allow-env --output=tcurl src/main.ts",
    "cache": "deno cache src/main.ts",
    "deploy": "deno task cache && deno task check && deno task start"
  },

  "imports": {
    "@hono/hono": "https://deno.land/x/hono@v4.3.11/mod.ts",
    "@hono/cors": "https://deno.land/x/hono@v4.3.11/middleware/cors/index.ts",
    "@hono/secure-headers": "https://deno.land/x/hono@v4.3.11/middleware/secure-headers/index.ts",
    "@hono/logger": "https://deno.land/x/hono@v4.3.11/middleware/logger/index.ts",
    "@hono/serve-static": "https://deno.land/x/hono@v4.3.11/middleware/serve-static/index.ts",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.81.1",
    "@std/crypto": "jsr:@std/crypto@^1.0.0",
    "@std/encoding": "jsr:@std/encoding@^1.0.0",
    "@std/log": "jsr:@std/log@^0.224.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "redis": "https://deno.land/x/redis@v0.32.4/mod.ts",
    "bcrypt": "https://deno.land/x/bcrypt@v0.4.1/mod.ts"
  },

  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window", "deno.unstable"],
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },

  "lint": {
    "include": ["src/main.ts", "src/routes/", "src/services/", "src/utils/"],
    "exclude": ["public/js/", "src/index.ts", "src/types/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "no-await-in-loop",
        "require-await"
      ]
    }
  },

  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["public/js/"]
  },

  "test": {
    "include": ["src/**/*_test.ts", "tests/"]
  },

  "nodeModulesDir": "none",
  "lock": true
}
